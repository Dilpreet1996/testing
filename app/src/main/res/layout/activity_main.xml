<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Internet of Things"
            android:textSize="20dp"
            android:textColor="#456937"
            android:textAlignment="center"
            android:padding="7.5dp"
            />
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"

       android:id="@+id/mainlayout"
       android:layout_below="@+id/ll"
       >

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:id="@+id/ll1"
           >

           <Button
               android:id="@+id/tube1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:padding="20dp"

               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="TUBE 1"
               android:textSize="15dp"
               android:textColor="#A01B17"
               android:layout_below="@+id/tube1"
               />
           <Button
               android:id="@+id/bulb1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:padding="20dp"

               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Bulb 1"
               android:layout_below="@+id/bulb1"
               android:textSize="15dp"
               android:textColor="#A01B17"
               />



       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_centerHorizontal="true"
           android:layout_marginHorizontal="50dp"

           >



           <Button
               android:id="@+id/plug1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:padding="20dp"

               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Plug 1"
               android:layout_below="@+id/plug1"
               android:textSize="15dp"
               android:textColor="#A01B17"
               />
           <Button
               android:id="@+id/tv1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:padding="20dp"

               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="TELEVISION 1"
               android:layout_below="@+id/tv1"
               android:textSize="15dp"
               android:textColor="#A01B17"
               />


       </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"


        >
       <Button
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:background="@drawable/round"
           android:onClick="ipdd1"
           android:id="@+id/btn"

           android:gravity="center_vertical|center_horizontal"
           android:text="+"
           android:textSize="40dp"
           android:textColor="#fff"
           android:layout_marginHorizontal="20dp"
           android:layout_marginVertical="50dp"

           />
    </LinearLayout>


   </LinearLayout>









    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/output"
        android:layout_below="@+id/mainlayout"

        android:layout_centerHorizontal="true"
        android:textSize="20sp"
            android:scrollbars="vertical"
        android:layout_marginTop="30dp"
        android:textColor="#000"


        />


</RelativeLayout>